{
  "name": "cwl-discord-bot",
  "version": "1.0.0",
  "private": true,
  "description": "Multi-guild Clash of Clans CWL Discord bot with Google Sheets integration",
  "type": "module",
  "engines": {
    "node": "24.13.0"
  },
  "packageManager": "pnpm@10.6.3",
  "scripts": {
    "setup": "pnpm run migrate && pnpm run deploy:commands",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts --max-warnings 0",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test": "vitest run",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "migrate": "tsx src/infra/db/run-migrations.ts",
    "deploy:commands": "tsx src/scripts/deploy-commands.ts",
    "drizzle:generate": "drizzle-kit generate"
  },
  "dependencies": {
    "discord.js": "14.25.1",
    "dotenv": "16.4.7",
    "drizzle-orm": "0.45.1",
    "googleapis": "171.4.0",
    "mysql2": "3.17.2",
    "neverthrow": "8.2.0",
    "p-queue": "9.1.0",
    "p-retry": "7.1.1",
    "pino": "10.3.1",
    "ulid": "3.0.2",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@types/node": "24.3.0",
    "@typescript-eslint/eslint-plugin": "8.43.0",
    "@typescript-eslint/parser": "8.43.0",
    "@vitest/coverage-v8": "3.2.4",
    "drizzle-kit": "0.31.5",
    "eslint": "9.38.0",
    "eslint-config-prettier": "10.1.8",
    "prettier": "3.6.2",
    "tsc-alias": "1.8.16",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  }
}
